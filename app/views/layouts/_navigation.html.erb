<% url_trim = request.fullpath.split('/').blank? ? '' : request.fullpath.split('/')[request.fullpath.split('/').count - 1].split('?')[0]
  defaultbg = ['contact-us','search','thank-you']
%>
<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse <%= 'default-bg' if defaultbg.include?(url_trim) %>">
  <div class="container col-sm-12">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">
        <img src="https://s3-ap-northeast-1.amazonaws.com/zengardenph/zenGardenLogo.png" />
      </a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav pull-right">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
