<% url_trim = request.fullpath.split('/')[1].split('?')[0] %>
<style type="text/css">
	section.sub-top{
		background-image: url('assets/zenGardenImage2.jpg');
	}

	.inquiry-form{
		color: #fff;
		padding: 40px;
	}

	textarea.form-control{
		height: 150px;
	}
	@media only screen and (max-width: 767px) {
		form{
			padding: 15px;
		}
		.form-group.fullname{
			margin-bottom: 0;
		}
		.form-group.fullname input{
			margin-bottom: 15px;
		}
		.add-margin{
			margin-bottom: 15px;
		}
	}
</style>

<section class="sub-top banner">
	<div class="col-md-6 col-md-offset-3 title text-center">
		<h1>inquiry and resitration</h1>
	</div>
</section>

<div class="container main">
	<div class="col-md-10 col-md-offset-1 mb-25 mt-25">
		<div class="row">
			<form role="form" method="post" action="" class="form-horizontal inquiry-form">
				<div class="form-group fullname">
					<div class="col-sm-2"><label class="control-label">Name</label></div>
					<div class="col-sm-4">
						<input class="form-control" id="" name="first_name" type="text" placeholder="First Name" value="">
					</div>
					<div class="col-sm-3">
						<input class="form-control" id="" name="middle_name" type="text" placeholder="Middle Name" value="">
					</div>
					<div class="col-sm-3">
						<input class="form-control" id="" name="last_name" type="text" placeholder="Last Name" value="">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2"><label class="control-label">Email Address</label></div>
					<div class="col-sm-4">
						<input class="form-control" id="" name="email_address" type="text" placeholder="" value="">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2"><label class="control-label">Contact No.</label></div>
					<div class="col-sm-4">
						<input class="form-control" id="" name="" type="text" placeholder="" value="">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-2"><label class="control-label">Home Address</label></div>
					<div class="col-sm-7">
						<input class="form-control" id="" name="" type="text" placeholder="" value="">
					</div>
				</div>
				<div class="form-group mt-50">
					<div class="col-sm-2"><label class="control-label">Event Date</label></div>
					<div class="col-sm-4 add-margin">
						<input class="form-control withdatepicker" id="" name="" type="text" placeholder="" value="">
					</div>
					<div class="col-sm-2"><label class="control-label">Event Type</label></div>
					<div class="col-sm-4">
						<%= select('','event_id', Event.order(:name).collect { |e| [e.name, e.id] }, { include_blank: 'Choose Event' }, :class => 'form-control') %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-12">
						<textarea class="form-control" placeholder="Message"></textarea>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-3 col-xs-12 pull-right">
						<button type="submit" class="btn btn-lg btn-book">SUBMIT</button>
					</div>
				</div>
				<div class="clearfix"></div>
			</form>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$(".withdatepicker").datepicker({
			autoclose: true,
			todayHighlight: true,
			format: 'yyyy-mm-dd'
		});
	});
</script>