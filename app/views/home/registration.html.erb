<% url_trim = request.fullpath.split('/')[1].split('?')[0] %>
<style type="text/css">
	section.sub-top{
		background-image: url('assets/zenGardenImage2.jpg');
	}

	.nav-tabs > li > a{
		border-radius: 0;
		background-color: #2A2625;
		margin: 0;
		border: 0;
		padding: 20px 15px;
		font-size: 20px;
		font-weight: bold;
		color: #fff !important;
		width: 260px;
		text-align: center;
	}

	.nav-tabs > li > a:hover{
		background-color: #402E2C;
		border: 0;
	}

	.nav-tabs > li.active > a,
	.nav-tabs > li.active > a:hover{
		background-color: #402E2C;
		border: 0;
	}

	form{
		background-color: #402E2C;
		color: #fff;
		padding: 40px;
	}
</style>

<section class="sub-top banner">
	<div class="col-sm-4 col-sm-offset-4 title text-center">
		<h1>Lorem ipsum</h1>
		<p>Lorem ipsum dolor sit amet, incididunt ut labore et dolore magna aliqua.</p>
	</div>
</section>

<div class="container main">
	<div class="col-md-6 col-md-offset-3">
		<div class="row text-center">
			<strong><h3>INQUIRY AND REGISTRATION</h3></strong>
			<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
		</div>
	</div>
	<div class="col-md-10 col-md-offset-1 mb-25 mt-25">
		<div class="row">
			<ul class="nav nav-tabs" role="tablist">
				<li <%= 'class=active' if url_trim == "inquiry" %>>
					<a href="#inquiry" role="tab" data-toggle="tab" onclick="goToTab('inquiry')">INQUIRY</a>
				</li>
				<li <%= 'class=active' if url_trim == "registration" %>>
					<a href="#registration" role="tab" data-toggle="tab" onclick="goToTab('registration')">REGISTRATION</a>
				</li>
			</ul>

			<div class="tab-content">
				<div class="tab-pane active">
					<form role="form" method="post" action="">
						<div class="col-sm-12 mb-25">
							<input type="text" class="form-control" placeholder="Full Name">
						</div>
						<div class="col-sm-12 mb-25">
							<input type="text" class="form-control" placeholder="Email Address">
						</div>
						<div class="col-sm-12 mb-25">
							<input type="text" class="form-control" placeholder="Contact No.">
						</div>
						<div class="col-sm-12 mb-25">
							<input type="text" class="form-control" placeholder="Home Address">
						</div>
						<div class="col-md-3 pull-right">
							<button class="btn btn-lg btn-book">REGISTRATION</button>
						</div>
						<div class="clearfix"></div>
					</form>
				</div>
			</div>
		</div>
	</div>
	

	
</div>

<script type="text/javascript">
	function goToTab(url) {
		window.location = url + location.search
	}
</script>